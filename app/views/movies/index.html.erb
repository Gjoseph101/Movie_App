<h1>Welcome to <b><i>RetFlix!</b></i> See our collection of movies below</h1>

<%= form_tag '/movies', method: "GET" do %>
	<%= label_tag :query, "Search :" %>	
	<%= text_field_tag :query %>
	<%= submit_tag "Search" %>

<%end%>



<div><p><% @movies.each do |movie| %>
	<br/>
	
	<li><%=movie.title%></li>
	<h4><%=link_to movie.title, movie_path(movie) %></h4>
	<p><%=movie.description%></p>
	<p><%=movie.year_released%></p>  	
	<% end %>
	</p> 
 </div>



 


